<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.engbook">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/libro"
        android:label="@string/app_name"
        android:roundIcon="@drawable/libro"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Main2Activity" />
        <activity
            android:name=".vistas.EjercicioActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".vistas.DondeEstoyActivity" />
        <activity
            android:name=".vistas.NivelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vistas.MusicActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".vistas.EstadisticasActivity" />
        <activity android:name=".vistas.ExamenActivity" />
        <activity android:name=".vistas.NivelExamenActivity" />
        <activity android:name=".vistas.IntentoExamenActivity" />
        <activity android:name=".vistas.OpcionesGraficoActivity" />
        <activity android:name=".vistas.EstadisticaGeneralActivity" />
        <activity android:name=".InsertarUsuarioActivity" />
        <activity android:name=".vistas.AvanceActivity" />
        <activity android:name=".vistas.GraficoAvanceActivity"></activity>
    </application>

</manifest>